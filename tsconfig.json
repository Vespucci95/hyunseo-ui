{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "rootDir": "lib",
    "lib": ["dom", "es2017"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./jest.setup.js"
  ],
  "exclude": [
    "dist/.yarn",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
